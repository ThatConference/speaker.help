@font-face {
	font-family: 'PM';
	src: url('/fonts/Permanent_Marker/PermanentMarker-Regular.ttf');
	font-display: swap;
}

@font-face {
	font-family: 'Russo';
	src: url('/fonts/Russo_One/RussoOne-Regular.ttf');
	font-display: swap;
}

:root {
	--theme-font-family-heading: 'Russo', sans-serif;
}

html,
body {
	@apply h-full overflow-hidden;
}

a {
	@apply no-underline;
}

.lineBreaks {
	white-space: pre-line;
}
